<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="loginPane"
            prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #b3ecff, #e6f9ff);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.LoginGui">
    <children>


        <!-- Immagine decorativa in alto -->
        <ImageView layoutX="430" layoutY="30"
                   fitWidth="140" fitHeight="140"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/images/swimmerman.png" />
            </image>
        </ImageView>
        <!-- Titolo dell'app -->
        <Text fx:id="titolo" layoutX="365.0" layoutY="200.0"
              strokeType="OUTSIDE" strokeWidth="0.0"
              text="Swimapp"
              textAlignment="CENTER"
              wrappingWidth="250.0"
              style="-fx-fill: #0077b6;">
            <font>
                <Font name="Comic Sans MS" size="60.0" />
            </font>
        </Text>

        <!-- Pannello contenente il form di login -->
        <AnchorPane layoutX="225.0" layoutY="220.0"
                    prefHeight="300.0" prefWidth="550.0"
                    style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #00bfff;">
            <children>

                <!-- Email -->
                <Text layoutX="144.0" layoutY="51.0" text="Email:">
                    <font><Font size="17.0"/></font>
                </Text>
                <TextField fx:id="emailField" layoutX="144.0" layoutY="59.0"
                           prefHeight="39.0" prefWidth="266.0"
                           promptText="Email" />

                <!-- Password -->
                <Text layoutX="144.0" layoutY="133.0" text="Password:">
                    <font><Font size="17.0"/></font>
                </Text>
                <PasswordField fx:id="passwordField" layoutX="145.0" layoutY="139.0"
                               prefHeight="39.0" prefWidth="266.0"
                               promptText="Password" />

                <!-- Messaggi di errore -->
                <Label fx:id="credenzialiError" layoutX="200.0" layoutY="20.0"
                       textFill="#d62828" visible="false" />
                <Label fx:id="credenzialiSbagliate" layoutX="200.0" layoutY="40.0"
                       textFill="#d62828" visible="false" />

                <!-- Bottone Login -->
                <Button layoutX="233.0" layoutY="199.0" mnemonicParsing="false"
                        onAction="#login" prefHeight="39.0" prefWidth="89.0" text="Login"
                        style="-fx-background-color: #00bfff; -fx-text-fill: white; -fx-font-size: 16px;">
                    <font><Font size="18.0"/></font>
                </Button>

                <!-- Registrazione -->
                <Text layoutX="226.0" layoutY="275.0" text="oppure">
                    <font><Font size="14.0"/></font>
                </Text>
                <Text layoutX="277.0" layoutY="276.0"
                      onMouseClicked="#caricaRegistrazione"
                      text="Registrati" underline="true"
                      style="-fx-fill: #0077b6;">
                    <font><Font size="17.0"/></font>
                </Text>

            </children>
        </AnchorPane>

    </children>
</AnchorPane>


